{
  "name": "agent-rdp-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r run build:ts",
    "build:ts": "pnpm --filter agent-rdp run build:ts",
    "build:rust": "cargo build --release && node scripts/copy-native.cjs",
    "build:all": "node scripts/build-all.cjs",
    "example": "tsx examples/typescript/hello-world.ts",
    "lint": "eslint packages/agent-rdp/src examples",
    "lint:fix": "eslint packages/agent-rdp/src examples --fix",
    "lint:ps1": "pwsh -NoProfile -File scripts/lint-ps1.ps1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
